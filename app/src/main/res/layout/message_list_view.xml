<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_msg_list_list_item"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp" >

        <LinearLayout
            android:id="@+id/layout_content_msg_list_list_item"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/corners_bg"
            android:orientation="vertical"
            android:paddingBottom="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="20dp" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false" >

                <TextView
                    android:id="@+id/tv_title_msg_list_list_item"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="消息标题"
                    android:textColor="@color/tv_Black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_time_msg_list_list_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:singleLine="true"
                    android:text="2015-08-21"
                    android:textColor="@color/tv_Black"
                    android:textSize="10.5sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/iv_pic_msg_list_list_item"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_launcher"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_content_msg_list_list_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:ellipsize="end"
                android:lineSpacingExtra="3dp"
                android:maxLines="3"
                android:text="消息内容文本"
                android:textColor="@color/tv_Black"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>